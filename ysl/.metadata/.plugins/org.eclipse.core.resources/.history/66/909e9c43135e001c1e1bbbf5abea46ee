<mapper namespace="com.swempire.web.board.boardMapper">

	<select id="getBoardContent" resultType="com.swempire.web.board.model.BoardVO"	parameterType="com.swempire.web.board.model.BoardVO">

		SELECT BID, CATE_CD, TITLE, CONTENT, TAG, VIEW_CNT,
		REG_ID, REG_DT, EDIT_DT
		FROM TBL_BOARD WHERE BID = #{bid}
	</select>

